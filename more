local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local pGui = player:WaitForChild("PlayerGui")

-- 1. LIMPIEZA
if pGui:FindFirstChild("MasterHub_Final") then pGui.MasterHub_Final:Destroy() end

-- 2. HUB PRINCIPAL
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MasterHub_Final"
screenGui.ResetOnSpawn = false
screenGui.Parent = pGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 180, 0, 250) -- Más alto para los 5 botones
mainFrame.Position = UDim2.new(0.5, -90, 0.4, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
mainFrame.BackgroundTransparency = 0.2
mainFrame.Active = true
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 15)

local layout = Instance.new("UIListLayout", mainFrame)
layout.Padding = UDim.new(0, 8)
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.VerticalAlignment = Enum.VerticalAlignment.Center

-- 3. VARIABLES DE ESTADO
local states = {
    killer = false,
    survivor = false,
    speed = false,
    infJump = false,
    noclip = false
}

-- 4. FUNCIÓN PARA CREAR BOTONES
local function createBtn(text, color)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.85, 0, 0, 32)
    btn.Font = Enum.Font.GothamBold
    btn.Text = text
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.BackgroundColor3 = color
    btn.TextSize = 12
    btn.Parent = mainFrame
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    return btn
end

local kBtn = createBtn("Esp Killer", Color3.fromRGB(200, 50, 50))
local sBtn = createBtn("Esp Survivor", Color3.fromRGB(50, 150, 200))
local spBtn = createBtn("Speed", Color3.fromRGB(120, 120, 120))
local jBtn = createBtn("Infinite Jump", Color3.fromRGB(180, 130, 50))
local nBtn = createBtn("Noclip", Color3.fromRGB(80, 80, 80))

-- 5. EVENTOS DE CLICK (Actualización de Texto y Color)
kBtn.MouseButton1Click:Connect(function()
    states.killer = not states.killer
    kBtn.Text = states.killer and "Killer: On" or "Esp Killer"
    kBtn.BackgroundColor3 = states.killer and Color3.fromRGB(50, 200, 50) or Color3.fromRGB(200, 50, 50)
end)

sBtn.MouseButton1Click:Connect(function()
    states.survivor = not states.survivor
    sBtn.Text = states.survivor and "Survivor: On" or "Esp Survivor"
    sBtn.BackgroundColor3 = states.survivor and Color3.fromRGB(50, 200, 50) or Color3.fromRGB(50, 150, 200)
end)

spBtn.MouseButton1Click:Connect(function()
    states.speed = not states.speed
    spBtn.Text = states.speed and "Speed: On" or "Speed"
    spBtn.BackgroundColor3 = states.speed and Color3.fromRGB(50, 200, 50) or Color3.fromRGB(120, 120, 120)
end)

jBtn.MouseButton1Click:Connect(function()
    states.infJump = not states.infJump
    jBtn.Text = states.infJump and "InfJump: On" or "Infinite Jump"
    jBtn.BackgroundColor3 = states.infJump and Color3.fromRGB(50, 200, 50) or Color3.fromRGB(180, 130, 50)
end)

nBtn.MouseButton1Click:Connect(function()
    states.noclip = not states.noclip
    nBtn.Text = states.noclip and "Noclip: On" or "Noclip"
    nBtn.BackgroundColor3 = states.noclip and Color3.fromRGB(50, 200, 50) or Color3.fromRGB(80, 80, 80)
end)

-- 6. LÓGICA DE INFINITE JUMP
UserInputService.JumpRequest:Connect(function()
    if states.infJump and player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid:ChangeState("Jumping")
    end
end)

-- 7. BUCLE DE LÓGICA (ESP, SPEED, NOCLIP)
RunService.Stepped:Connect(function()
    -- Lógica NOCLIP
    if states.noclip and player.Character then
        for _, part in pairs(player.Character:GetDescendants()) do
            if part:IsA("BasePart") and part.CanCollide == true then
                part.CanCollide = false
            end
        end
    end
    
    -- Lógica SPEED
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.WalkSpeed = states.speed and 22 or 16
    end

    -- Lógica ESP
    for _, p in pairs(Players:GetPlayers()) do
        if p ~= player and p.Character and p.Team then
            local old = p.Character:FindFirstChild("ESPMark")
            local color = nil
            if states.killer and p.Team.Name == "Killer" then color = Color3.new(1,0,0)
            elseif states.survivor and p.Team.Name == "Survivor" then color = Color3.new(0,1,1) end
            
            if color then
                if not old then
                    local h = Instance.new("Highlight", p.Character)
                    h.Name = "ESPMark"
                    h.FillColor = color
                else old.FillColor = color end
            elseif old then old:Destroy() end
        end
    end
end)

-- 8. MOVIMIENTO (DRAG)
local dragging, dragStart, startPos
mainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true dragStart = input.Position startPos = mainFrame.Position
    end
end)
UserInputService.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)
UserInputService.InputEnded:Connect(function(input) dragging = false end)
